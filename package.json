{
  "name": "react-electron-app",
  "version": "1.0.0",
  "description": "一个使用 React 和 Electron 构建的桌面应用",
  "main": "main.js",
  "scripts": {
    "start": "webpack serve --mode development",
    "electron": "cross-env ELECTRON_ENABLE_LOGGING=true ELECTRON_START_URL=http://localhost:3000 electron . --enable-logging --verbose",
    "dev": "concurrently \"pnpm start\" \"pnpm run electron\" --verbose",
    "build": "webpack --mode production",
    "electron-pack": "electron-builder build --mac --arm64 --x64",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "jest"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@babel/core": "^7.25.9",
    "@babel/preset-env": "^7.25.9",
    "@babel/preset-react": "^7.25.9",
    "babel-loader": "^9.2.1",
    "concurrently": "^8.2.1",
    "cross-env": "^7.0.3",
    "css-loader": "^6.8.1",
    "electron": "^33.0.2",
    "electron-builder": "^24.6.3",
    "eslint": "^8.56.0",
    "eslint-plugin-react": "^7.33.2",
    "html-webpack-plugin": "^5.6.3",
    "jest": "^29.7.0",
    "style-loader": "^3.3.3",
    "terser-webpack-plugin": "^5.3.9",
    "wait-on": "^7.2.0",
    "webpack": "^5.95.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.1.0"
  },
  "build": {
    "appId": "com.yourcompany.yourappname",
    "productName": "Your App Name",
    "mac": {
      "category": "public.app-category.utilities",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json",
      "main.js"
    ],
    "directories": {
      "buildResources": "assets"
    }
  }
}
